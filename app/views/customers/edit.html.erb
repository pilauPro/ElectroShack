<div class="jumbotron">
  <h1>ElectroShack</h1>
</div>
<h2>Welcome, <%= @customer.first_name %></h2>
<h3>Edit Customer Information</h3>
<%= form_for @customer do |f| %>
  <div class="row">
    <div class="col-md-2">
      <h4><%= f.label "first name" %></h4>
    </div>
    <div class="col-md-2">
      <%= f.text_area(:first_name, size: '50x2') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h4><%= f.label "last name" %></h4>
    </div>
    <div class="col-md-2">
      <%= f.text_area(:last_name, size: '50x2') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h4><%= f.label "username" %></h4>
    </div>
    <div class="col-md-2">
      <%= f.text_area(:user_name, size: '50x2') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h4><%= f.label "password" %></h4>
    </div>
    <div class="col-md-2">
      <%= f.text_area(:password, size: '50x2') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h4><%= f.label "email" %></h4>
    </div>
    <div class="col-md-2">
      <%= f.text_area(:email, size: '50x2') %>
    </div>
  </div>
  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>

